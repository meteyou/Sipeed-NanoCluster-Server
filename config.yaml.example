server:
  host: "0.0.0.0"
  port: 5000

temperature_monitoring:
  interval_seconds: 30
  endpoint: "/api/temperature"
  timeout: 5

nodes:
  - name: "node-1"
    slot: 1
    ip: "192.168.0.101"
    port: 5001
    enabled: true

  - name: "node-2"
    slot: 2
    ip: "192.168.0.102"
    port: 5001
    enabled: true

  - name: "node-3"
    slot: 3
    ip: "192.168.0.103"
    port: 5001
    enabled: false

fan:
  gpio_pin: 13
  min_temp: 40
  max_temp: 70
  min_speed: 30
  max_speed: 100